
  "Milvus": {
    "type": "object",
    "description": "Milvus配置",
    "items": {
      "islite": {
        "type": "bool",
        "description": "是否使用lite模式"
      },
      "host": {
        "type": "string",
        "description": "服务器地址，默认为localhost"
      },
      "port": {
        "type": "string",
        "description": "端口号，默认为19530"
      },
      "user": {
        "type": "string",
        "description": "用户名，默认为空"
      },
      "password": {
        "type": "string",
        "description": "密码，默认为空"
      }
    }
  },
  "plugin_conf":{
    "type": "object",
    "description": "插件配置",
    "items":{
      "top_k": {
        "type": "int",
        "description": "返回结果数量",
        "default": 5
      },
        "threshold": {
        "type": "float",
        "description": "同义相似阈值",
        "hint": "小于本值视作意思相近,范围为0~1",
        "default": 0.5
      },
      "cluster_threshold": {
        "type": "float",
        "description": "类相似阈值",
        "hint": "每一类最低相似程度,范围为0~1",
        "default": 0.45
      }
    }
  }
}