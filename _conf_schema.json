{
  "ollama_api_url": {
    "type": "string",
    "description": "Ollama服务地址",
    "default": "http://localhost:11434"
  },
  "embed_model": {
    "type": "string",
    "description": "Embedding模型名称",
    "default": "quentinz/bge-small-zh-v1.5"
  },
  "top_k": {
    "type": "int",
